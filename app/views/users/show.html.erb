<div class="booyah-box">
  <div class="row">
    <div class="col-4">
      <%= image_tag "BryceBrittany_Kat'sWedding.jpg" %>
    </div>
    <div class="col-8">
      <h1><%= @user.email %></h1>
      <h3>Member Since: <%= @user.created_at.to_s(:long_no_time) %></h3>
      <h4><%= @user.comments.count %> total comments</h4>
      <h4><%= @user.comments.where(rating: '5_stars').count %> total 5 Star review(s)</h4>
    </div>
  </div>
</div>
<br /><br />
<h1 class="text-center">My Comments</h1>
<br /><br />
<div class="row">
  <% if @user.comments.present? %>
    <% @user.comments.each do |comment| %>
      <div class="col-10 col-sm-6">
        <blockquote>
          <% if comment.humanized_rating.present? %>
            <b><%= comment.humanized_rating %></b> - 
          <% end %>
          <%= comment.message %>
          <%= link_to "#{comment.place.name}", place_path(comment.place) %>
        </blockquote>
      </div>
    <% end %>
  <% end %>
</div>
<br /><br />
<h1 class="text-center">My Places</h1>
<br /><br />
<% @user.places.each do |place| %>
<div class="booyah-box col-10 offset-1">
  <% if place.photos.last.present? %>
    <%= image_tag(place.photos.last.picture.url) %>
  <% end %>
  <br />
  <h1><%= link_to place.name, place_path(place) %></h1>
  <i><%= place.address %></i><br /><br />
  <p><%= place.description %></p><br />

  <% if place.comments.present? %>
  <div class="col-12">
    <blockquote>
      <% if place.comments.last.humanized_rating.present? %>
        <b><%= place.comments.last.humanized_rating %></b> -
      <% end %>
      <%= place.comments.last.message %>
      <small><%= place.comments.last.user.email %></small>
    </blockquote>
  </div>
  <% end %>
</div>
<% end %>